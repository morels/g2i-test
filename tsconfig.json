{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "esModuleInterop": true,
        "exactOptionalPropertyTypes": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "noEmit": true,
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "components/*": [
                "src/components/*"
            ]
        },
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}